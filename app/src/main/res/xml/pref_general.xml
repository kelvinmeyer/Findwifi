<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/generalPrefs">
    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/key_open_switch"
        android:summary="@string/pref_description_show_open_only"
        android:title="@string/pref_title_show_open_only" />

    <EditTextPreference
        android:defaultValue="@string/pref_default_Number_Spots"
        android:inputType="text"
        android:key="@string/key_number_wifi"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_Nuber_wifi" />

</PreferenceScreen>
